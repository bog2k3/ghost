{
	"manifest_version" : 2,
	"name" : "Sporting bet get info",
	"version": "1.1",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"background": {
		"scripts" : ["js/background.js"]
	},

	"permissions": [
    		"tabs", "http://*/*","https://*/*"  
	],

	"content_scripts": [
                {
                        "matches": ["https://*/*","http://*/*"],
                        "js": ["js/fotbal_class.js","js/parse_page.js"],
			"run_at": "document_end",
			"all_frames": true
                }
        ]

}
